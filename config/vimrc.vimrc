set nu
set rnu
set background=dark
set t_Co=256

" make cursor usable
set nocompatible

filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
" prevent word wrap
set nowrap
set textwidth=0
set wrapmargin=0
